{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    /* files are emitted by babel */
    "baseUrl": "../",
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "types": ["@types/webpack-env"]
  },
  "include": [
    "app",
    "data",
    "export/types/**/*.ts",
    "next-env.d.ts",
    "next.config.ts",
    "pages",
    "src",
    "types",
    ".next/types/**/*.ts"
  ],
  "exclude": ["docs/.next", "docs/export", "node_modules"]
}
